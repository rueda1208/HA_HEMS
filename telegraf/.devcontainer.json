{
  "name": "Telegraf Devcontainer",
  "image": "telegraf:latest",
  "postStartCommand": "sh /workspace/devcontainer_bootstrap.sh",
  "runArgs": [
    "--privileged",
    "-e", "GIT_EDITOR=code --wait"
  ],
  "containerEnv": {
    "WORKSPACE_DIRECTORY": "${containerWorkspaceFolder}"
  },
  "workspaceFolder": "/mnt/supervisor/addons/local/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind,consistency=cached",
    "type=volume,target=/var/lib/docker",
    "type=volume,target=/mnt/supervisor"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "timonwong.shellcheck",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.profiles.linux": {
          "sh": {
            "path": "/bin/sh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "sh",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "remoteUser": "root"
}
